exec --no-startup-id i3-msg "workspace 2|"
exec --no-startup-id i3-msg "exec /usr/bin/firefox;"
exec --no-startup-id i3-msg "workspace 1|"
exec --no-startup-id i3-msg "exec i3-sensible-terminal"
exec "compton -cCGfF -o 0.38 -O 200 -I 200 -t 0 -l 0 -r 3 -D2 -m 0.88 -b"

